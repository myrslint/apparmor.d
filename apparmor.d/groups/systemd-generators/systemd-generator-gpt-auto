abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{lib}/systemd/system-generators/systemd-gpt-auto-generator
profile systemd-generator-gpt-auto @{exec_path} flags=(attach_disconnected)  {
  include <abstractions/base>
  include <abstractions/disks-read>
  include <abstractions/common/systemd>

  capability sys_admin,

  ptrace read peer=@{p_systemd},

  @{exec_path} mr,

  / r,
  @{efi}/ r,
  /etc/fstab r,
  /usr/ r,
  /home/ r,

  @{run}/systemd/generator.late/**.{,auto}mount w,
  @{run}/systemd/generator.late/**.swap w,
  @{run}/systemd/generator.late/home.mount.wants/ w,
  @{run}/systemd/generator.late/swap.target.wants/ w,
  @{run}/systemd/generator.late/local-fs.target.d/ w,
  @{run}/systemd/generator.late/local-fs.target.d/*.conf w,
  @{run}/systemd/generator.late/local-fs.target.requires/ w,
  @{run}/systemd/generator.late/local-fs.target.wants/ w,

  @{sys}/firmware/efi/efivars/LoaderDevicePartUUID-@{uuid} r,

  @{PROC}/@{pid}/cgroup r,

  include if exists <local/systemd-generator-gpt-auto>
}

# vim:syntax=apparmor
